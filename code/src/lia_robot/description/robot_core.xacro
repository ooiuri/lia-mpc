<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="deeporange" >
        <color rgba="0.8627450980392157 0.30196078431372547 0.00392156862745098 1.0" />
    </material>
    
    <!-- BASE LINK -->

    <link name="base_link">

    </link>

 
    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.06 0 -0.01"/>
        <!-- the wheel is 0.03 from the rear -->
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.075 0 0"/>
            <!-- <origin xyz="0.14 0 0.018"/> -->
            <!-- adding lia mesh -->
            <geometry>
                <mesh filename="file://$(find lia_robot)/meshes/lia_car_chassis_v2.stl"/>
                <!-- <box size="0.22 0.10 0.05"/> -->
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <!-- <origin xyz="0.075 0 0"/> -->
            <origin xyz="0.116 0 0.018"/>
            <geometry>
                <box size="0.17 0.106 0.05"/>
                <!-- <mesh filename="package://lia_robot/meshes/lia_car_chassis_v2.stl"/> -->
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.03" x="0.22" y="0.10" z="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <!-- <material>Gazebo/DarkYellow</material> -->
        <material>deeporange</material>
    </gazebo>
    
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.045 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.01" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
   
    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.045 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.01" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

   <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- FIRST CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.165 0.028 -0.0075"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.005">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
   
    <gazebo reference="caster_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.001" />
        <mu2 value="0.001" />
    </gazebo>

    <!-- SECOND CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint2" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel2"/>
        <origin xyz="0.165 -0.028 -0.0075"/>
    </joint>


    <link name="caster_wheel2">
        <visual>
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.005">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    
    <gazebo reference="caster_wheel2">
        <material>Gazebo/White</material>
        <mu1 value="0.001" />
        <mu2 value="0.001" />
    </gazebo>
    
</robot>